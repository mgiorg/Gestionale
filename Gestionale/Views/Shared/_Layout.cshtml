<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="shortcut icon" href="~/favicon/bnt.ico" type="image/x-icon">
    <link rel="icon" href="~/favicon/bnt.ico" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <title>@ViewData["Title"] - Gestionale</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Gestionale.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" integrity="sha512-q3eWabyZPc1XTCmF+8/LuE1ozpg5xxn7iO89yfSOd5/oKvyqLngoNGsx8jq92Y8eXJ/IRxQbEC+FGSYxtk2oiw==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
</head>
<body class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "home-page" : "")">
<header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container-fluid position-relative">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link custom-link" asp-controller="Storage" asp-action="All">
                            <i class="fas fa-warehouse"></i> Storages
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link custom-link" asp-controller="Product" asp-action="All">
                            <i class="fas fa-box"></i> Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link custom-link" asp-controller="Transport" asp-action="All">
                            <i class="fas fa-truck"></i> Transports
                        </a>
                    </li>
                </ul>

                <div class="navbar-brand position-absolute top-50 start-50 translate-middle">
                    <a class="text-primary text-decoration-none d-flex align-items-center justify-content-center" asp-controller="Home" asp-action="Index">
                        <span class="brand-text me-3">Massimo</span>
                        <img src="~/favicon/bnt.ico" alt="Logo" width="30" height="30" class="mx-2">
                        <span class="brand-text ms-3">Giordano</span>
                    </a>
                </div>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link custom-link" href="https://github.com/mgiorg/Gestionale" target="_blank">
                            <i class="fab fa-github"></i> GitHub
                        </a>
                    </li>
                    <li class="nav-item">
                        
                        <a class="nav-link custom-link" href="#" data-bs-toggle="modal" data-bs-target=#contactsModal>
                            <i class="fas fa-envelope"></i> Contatti
                        </a>

                        <!-- Modal contatti -->
                        <div class="modal fade text-dark" id="contactsModal" tabindex="-1" aria-labelledby="contactsModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <!-- Intestazione del modal -->
                                    <div class="modal-header justify-content-center">
                                        <h5 class="modal-title" id="contactsModalLabel">Contatti</h5>
                                        <button type="button" class="btn-close position-absolute end-0 me-3" data-bs-dismiss="modal" aria-label="Chiudi"></button>
                                    </div>
                                    <!-- Corpo del modal -->
                                    <div class="modal-body text-center">
                                        <ul class="list-unstyled mb-4">
                                            <li>
                                                <strong>Massimo Giordano</strong><br>
                                                Email: <a href="mailto:massimo.giord@gmail.com">massimo.giord@gmail.com</a><br>
                                                Telefono: +39 3666139289
                                            </li>
                                            <!-- Aggiungi altri contatti qui -->
                                        </ul>
                                        <!-- Footer del modal -->
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="background-color: #66affd; color: white;">Chiudi</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - Massimo Giordano
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>